{
    "type": "APL",
    "version": "1.6",
    "theme": "dark",
    "import": [
        {
            "name": "alexa-layouts",
            "version": "1.3.0"
        }
    ],
    "resources": [],
    "styles": {},
    "layouts": {},
    "mainTemplate": {
        "parameters": [
            "payload"
        ],
        "items": [
            {
                "type": "Container",
                "width": "100%",
                "height": "100%",
                "items": [
                    {
                        "type": "AlexaBackground",
                        "backgroundScale": "fill",
                        "backgroundImageSource": "https://yosoytuprofe.20minutos.es/wp-content/uploads/2021/01/numeros-felices.png"
                    },
                    {
                        "type": "AlexaHeader",
                        "headerBackButton": true,
                        "headerBackButtonAccessibilityLabel": "back",
                        "headerBackgroundColor": "transparent",
                        "headerTitle": "Alexa Background Example",
                        "headerSubtitle": "Example showing AlexaBackground and AlexaHeader",
                        "headerAttributionText": "Attribution",
                        "headerAttributionImage": "https://d2o906d8ln7ui1.cloudfront.net/images/templates_v3/logo/logo-modern-botanical-white.png",
                        "headerAttributionPrimacy": true,
                        "headerDivider": false
                    }
                ]
            }
        ]
    }
}